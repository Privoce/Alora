{
  "manifest_version": 2,
  "name": "Alora",
  "version": "2.3",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["youtube.bundle.js"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["*://*/*"],
      "js": ["content.bundle.js"]
    }
  ],
  "description": "Manage cookies wisely and protect your privacy.",
  "permissions": ["browsingData", "cookies", "storage", "tabs", "history", "chrome://favicon/", "<all_urls>"],
  "content_security_policy": "script-src 'self'; object-src 'self'; img-src chrome://favicon;",
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "ba-off.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "default_locale": "en"
}
